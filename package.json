{
  "name": "vitepress",
  "version": "0.0.1",
  "description": "学习vitepress",
  "type": "module",
  "packageManager": "pnpm@8.9.2",
  "author": "biyejun",
  "bin": {
    "vitepress": "bin/vitepress.js"
  },
  "scripts": {
    "dev": "rimraf dist && run-s dev:shared dev:start",
    "dev:start": "run-p dev:client dev:node dev:watch",
    "dev:client": "tsc --sourcemap -w -p src/client",
    "dev:node": "DEV=true pnpm build:node -w",
    "dev:shared": "node scripts/copyShared",
    "dev:watch": "node scripts/watchAndCopy",
    "docs": "run-p dev docs:dev",
    "docs:dev": "wait-on -d 100 src/node/cli.js && pnpm -F=docs dev",
    "build:node": "tsc -p src/node --noEmit && node dev.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "license": "MIT",
  "devDependencies": {
    "chokidar": "^3.5.3",
    "conventional-changelog-cli": "^4.1.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "wait-on": "^7.1.0"
  },
  "dependencies": {
    "vite": "^4.5.0"
  }
}
